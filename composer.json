{
    "name": "wallpix/platform",
    "description": "A professional web platform for sharing wallpapers and videos.",
    "type": "project",
    "require": {
        "php": "^8.0",
        "vlucas/phpdotenv": "^5.6",
        "intervention/image": "^2.7",
        "stripe/stripe-php": "^10.0",
        "paypal/paypalhttp": "^1.0",
        "firebase/php-jwt": "^6.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "graham-campbell/result-type": "^1.1",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [],
        "post-update-cmd": []
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.0"
        }
    },
    "suggest": {
        "ext-gd": "Required for image processing with Intervention Image.",
        "ext-curl": "Required for making HTTP requests (e.g., Stripe, PayPal).",
        "ext-mbstring": "Required for multilingual support."
    }
}
